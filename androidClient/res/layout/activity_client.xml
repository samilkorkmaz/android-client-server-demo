<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="samil.client.ClientActivity">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnConnectClick"
            android:text="Connect"
            android:textAllCaps="false"/>

        <Button
            android:layout_toRightOf="@+id/btnConnect"
            android:id="@+id/btnSendMessageToServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnSendMessageToServerClick"
            android:text="Send message"
            android:textAllCaps="false"/>

        <Button
            android:layout_toRightOf="@+id/btnSendMessageToServer"
            android:id="@+id/btnDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnDisconnectClick"
            android:text="Disconnect"
            android:textAllCaps="false"/>

        <TextView
            android:layout_below="@+id/btnDisconnect"
            android:layout_marginTop="10dp"
            android:id="@+id/tvLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log" />


        <TextView
            android:layout_below="@+id/tvLog"
            android:layout_marginTop="10dp"
            android:id="@+id/tvMessageFromClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message from client" />

        <TextView
            android:layout_below="@+id/tvMessageFromClient"
            android:layout_marginTop="10dp"
            android:id="@+id/tvMessageFromServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message from server" />
</RelativeLayout>


